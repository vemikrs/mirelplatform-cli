{
  "name": "mirelplatform-cli-monorepo",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*",
    "templates/*"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "pnpm -r --filter ./packages/** run build",
    "dev:cli": "pnpm --filter @vemijp/mirelplatform-cli dev",
    "typecheck": "pnpm -r --filter ./packages/** run typecheck",
    "lint": "echo 'Add ESLint later'",
    "test": "pnpm -r --filter ./packages/** run test || true",
    "release": "echo 'Set up changesets or release action here'"
  },
  "devDependencies": {
    "typescript": "^5.9.3",
    "@types/node": "^24.10.1",
    "tsx": "^4.21.0"
  },
  "resolutions": {
    "tar": "^7.5.3"
  }
}
